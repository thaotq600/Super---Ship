<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAKU01.00001"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#91DC5A"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(9.69 Km)"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có shipper nhận"/>

    <TextView
        android:id="@+id/item_bill_address_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nơi gởi : "/>

    <TextView
        android:id="@+id/item_bill_address_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nơi nhận : "/>

</LinearLayout>