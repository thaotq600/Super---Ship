<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#f4e4a2"
                android:centerColor="#beb262"
                android:endColor="#f4e4a2"
                android:angle="270" />
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#71c2eb" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#a2f4da"
                android:centerColor="#62be9c"
                android:endColor="#a2f4da"
                android:angle="270" />
            <corners android:radius="10dp" />
            <stroke android:width="1px" android:color="#0070b7" />
        </shape>
    </item>
</selector>